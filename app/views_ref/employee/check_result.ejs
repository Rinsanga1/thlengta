<section class="section" style="padding-top:56px;">
  <div class="card pad" style="max-width:620px;margin:0 auto;">
    <div class="topbar" style="margin-bottom:14px;">
      <div>
        <div class="h-eyebrow">
          <span class="chip">Employee</span>
          <span class="chip"><%= ok ? "Success" : "Failed" %></span>
        </div>
        <h2 style="margin:10px 0 0;">
          <%= ok ? "Check-in successful" : "Check-in failed" %>
        </h2>
        <div class="small" style="margin-top:6px;">
          Store: <b><%= store && store.name ? store.name : "-" %></b>
        </div>
      </div>
    </div>

    <% if (employeeEmail) { %>
      <div class="notice" style="margin:12px 0; background:#f8faf9;">
        <div style="font-weight:900;">Employee</div>
        <div class="small" style="margin-top:6px;"><%= employeeEmail %></div>
      </div>
    <% } %>

    <div
      class="notice"
      style="margin-top:12px; background:<%= ok ? "#eaf6f0" : "#fff1f1" %>;"
    >
      <div style="font-weight:900;">
        <%= ok ? "Recorded" : "Not recorded" %>
      </div>
      <div class="small" style="margin-top:6px;">
        <%= message || (ok ? "Attendance recorded." : "Something went wrong.") %>
      </div>
    </div>

    <div class="actions" style="margin-top:14px;">
    </div>

    <div class="small" style="margin-top:12px;">
      You can close this page.
    </div>
  </div>
</section>
