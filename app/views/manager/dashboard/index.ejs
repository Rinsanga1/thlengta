<section class="section" style="padding-top:46px;">
  <div class="card pad super" style="margin:0 auto;">

    <div class="topbar" style="margin-bottom:14px;">
      <div>
        <div class="h-eyebrow">
          <span class="chip">Manager</span>
          <% if (admin && admin.plan) { %>
            <span class="chip"><%= String(admin.plan).toUpperCase() %></span>
          <% } else { %>
            <span class="chip">STANDARD</span>
          <% } %>
        </div>

        <h2 style="margin:10px 0 6px;">Manager Dashboard</h2>

        <div class="small" style="margin-bottom:8px;">
          <b><%= manager && manager.email ? manager.email : "-" %></b>
          <% if (admin && admin.email) { %>
            &nbsp;|&nbsp; Admin: <b><%= admin.email %></b>
          <% } %>
        </div>

        <div class="small" style="margin-top:10px;">
          View workplaces, QR, employees, and attendance logs.
        </div>
      </div>
    </div>

    <h3 style="margin:10px 0 12px;">Your Stores</h3>

    <% if (!stores || !stores.length) { %>
      <div class="muted">No stores assigned yet.</div>
    <% } else { %>
      <div class="list">
        <% stores.forEach(s => { %>
          <div class="item">
            <div class="icon">ST</div>
            <div style="flex:1;">
              <div style="font-weight:900;"><%= s.name %></div>

              <div class="small" style="margin-top:8px; display:flex; gap:10px; flex-wrap:wrap;">
                <a class="btn" style="width:auto;" href="/manager/store/<%= s.id %>/qr">QR</a>
                <a class="btn" style="width:auto;" href="/manager/store/<%= s.id %>/employees">Employees</a>
                <a class="btn primary" style="width:auto;" href="/manager/store/<%= s.id %>/logs">Logs</a>
              </div>

              <div class="small" style="margin-top:10px; opacity:0.85;">
                Public ID: <%= s.public_id %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>

  </div>
</section>
