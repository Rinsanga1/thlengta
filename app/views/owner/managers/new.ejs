<section class="section" style="padding-top:46px;">
  <div style="max-width:720px;margin:0 auto 20px;">
    <a class="btn" href="/owner/workplaces/<%= workplace.id %>?tab=managers" style="width:auto;">‚Üê Back to Workplace</a>
  </div>
  <div class="card pad" style="max-width:720px;margin:0 auto;">
    <div class="topbar" style="margin-bottom:14px;">
      <div>
        <div class="h-eyebrow">
          <span class="chip">Managers</span>
          <span class="chip">Add</span>
        </div>

        <h2 style="margin:10px 0 0;">Add Manager</h2>
        <div class="small" style="margin-top:6px;">
          Workplace: <b><%= workplace.name %></b>
        </div>
      </div>
    </div>

    <% if (enterpriseOnly) { %>
      <div class="error"><%= error %></div>

      <div class="actions" style="margin-top:12px;">
        <a class="btn" href="/owner/workplaces/<%= workplace.id %>?tab=managers">Back</a>
      </div>
    <% } else { %>

      <% if (error) { %>
        <div class="error"><%= error %></div>
      <% } %>

      <form class="form" method="post" action="/owner/workplaces/<%= workplace.id %>/managers/new" style="margin-top:12px;">
        <div class="field">
          <label>Manager Email</label>
          <input type="email" name="email" required placeholder="manager@company.com" />
        </div>

        <div class="field">
          <label>Password</label>
          <input type="password" name="password" placeholder="Only required if new manager" />
          <div class="small">
            If this email already exists for your company, we will just assign them to this workplace.
          </div>
        </div>

        <div class="actions" style="margin-top:12px;">
          <button class="btn primary" type="submit" style="width:auto;">Save</button>
          <a class="btn" href="/owner/workplaces/<%= workplace.id %>?tab=managers">Cancel</a>
        </div>
      </form>

      <div class="notice" style="margin-top:14px;">
        <div style="font-weight:900;">What managers can do</div>
        <div class="small" style="margin-top:6px;">
          View QR, view logs, export reports, and manage employees for assigned workplaces only.
        </div>
      </div>

    <% } %>
  </div>
</section>
