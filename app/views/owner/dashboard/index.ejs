<section>
<div class="card" style="max-width:1100px;margin:0 auto;padding:32px;">

<!-- TOP BAR -->
<div class="topbar" style="margin-bottom:14px;">
<div>
<div class="h-eyebrow">
<span class="chip">Owner</span>
<span class="chip">Dashboard</span>
</div>

<h2 style="margin:10px 0 6px;">Owner Dashboard</h2>

<!-- Owner identity -->
<div class="small" style="margin-bottom:8px;">
<b><%= admin?.email %></b>
&nbsp;|&nbsp;
Plan:
<b><%= (admin?.plan || "free").toUpperCase() %></b>
</div>

<!-- Upgrade button (only if not enterprise) -->
<% if ((admin?.plan || "free").toLowerCase() !== "enterprise") { %>
  <a class="btn" href="/owner/upgrade">Upgrade Plan</a>
    <% } %>

    <!-- Pending upgrade notice -->
    <% if (pendingUpgrade) { %>
      <div class="notice" style="background:#fff7df; margin-top:10px;">
        Upgrade request pending:
        <b>
        <%= pendingUpgrade.from_plan.toUpperCase() %>
        →
        <%= pendingUpgrade.to_plan.toUpperCase() %>
        </b>
        </div>
        <% } %>

        <div class="small" style="margin-top:10px;">
        Manage workplaces, employees, and attendance.
        </div>
        </div>
        </div>

        <!-- HOW IT WORKS -->
        <div class="notice" style="margin-bottom:18px;">
        <div style="font-weight:900;">How it works</div>
        <div class="small">
        Create a workplace → print QR → add employees → staff check in using GPS and PIN.
        </div>
        </div>

        <!-- ACTIONS -->
        <div class="actions" style="margin-bottom:18px;">
        <a class="btn primary" href="/owner/workplaces/new" >Create New Workplace</a>
        </div>

        <!-- WORKPLACES -->
        <h3 style="margin:10px 0 12px;">Your Workplaces</h3>

        <% if (!workplaces || !workplaces.length) { %>
          <div class="muted">No workplaces yet.</div>
            <% } else { %>
              <div class="list">
                <% workplaces.forEach(w => { %>
                    <div class="item">
                    <div class="icon">WP</div>
                    <div style="flex:1;">
                    <div style="font-weight:900;"><%= w.name %></div>
                    <div class="small" style="margin-top:6px; display:flex; gap:12px; flex-wrap:wrap;">
                    <a href="/owner/workplaces/<%= w.id %>/qr">QR</a>
                    <a href="/owner/workplaces/<%= w.id %>/edit">Settings</a>
                    <a href="/owner/workplaces/<%= w.id %>/employees">Employees</a>
                    <a href="/owner/workplaces/<%= w.id %>/logs">Logs</a>
                    <% if ((admin?.plan || "free") !== "free") { %>
                    <a href="/owner/workplaces/<%= w.id %>/managers">Managers</a>
                    <% } %>
                    </div>
                    </div>
                    </div>
                    <% }) %>
                </div>
                <% } %>

                </div>
</section>
