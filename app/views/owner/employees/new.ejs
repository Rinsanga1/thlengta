<section class="section" style="padding-top:46px;">
  <div style="max-width:720px;margin:0 auto 20px;">
    <a class="btn" href="/owner/workplaces/<%= workplace.id %>?tab=employees" style="width:auto;">‚Üê Back to Workplace</a>
  </div>
  <div class="card pad" style="max-width:720px;margin:0 auto;">
    <div class="topbar" style="margin-bottom:14px;">
      <div>
        <div class="h-eyebrow">
          <span class="chip">Employees</span>
          <span class="chip">Add</span>
        </div>
        <h2 style="margin:10px 0 0;">Add Employee</h2>
        <div class="small" style="margin-top:6px;">
          Workplace: <b><%= workplace.name %></b>
        </div>
      </div>
    </div>

    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <form class="form" method="post" action="/owner/workplaces/<%= workplace.id %>/employees" style="margin-top:12px;">
      <div class="field">
        <label>Employee Email</label>
        <input type="email" name="email" required placeholder="staff@example.com" />
      </div>

      <button class="btn primary full" type="submit">Add Employee</button>
    </form>

    <div class="notice" style="margin-top:14px;">
      <div style="font-weight:900;">Check-in method</div>
      <div class="small">Employees will check in using their logged-in account and GPS location.</div>
    </div>
  </div>
</section>
