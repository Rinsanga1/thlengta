<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= title || "Thlengta" %></title>

  <!-- Unified CSS - all styles compiled together -->
  <link rel="stylesheet" href="/assets/stylesheet/dist/application.css">

  <% if (favicon) { %>
    <link rel="icon" type="image/x-icon" href="<%= favicon %>">
  <% } %>
</head>

<header class="nav">
  <div class="container nav-inner">
    <!-- rewrite to turbo -->
    <a class="brand" href="/" data-nav>
      <span>
        <!-- rewrite to .svg files -->
        <img src="/assets/img/thlengtalogo.png" alt="Thlengta logo" width="48px"/>
      </span>
      <span class="small">
        <img src="/assets/img/thlengtalogotext.png" alt="Thlengta logo type" width="120px"/>
      </span>
      <span class="small">
        <img src="/assets/img/com.png" alt="Thlengta logo type" width="50px" style="margin-left: -8px"/>
      </span>
    </a>

    <nav class="nav-links">
      <a data-nav href="/#about">About</a>
      <a data-nav href="/#pricing">Pricing</a>
      <a data-nav href="/#contact">Contact</a>
      <% if (isLoggedIn) { %>
        <div class="user-dropdown">
          <button class="user-avatar-btn" type="button" aria-label="User menu" aria-haspopup="true" aria-expanded="false">
            <span class="user-avatar"><%= currentUser?.email?.charAt(0).toUpperCase() || 'U' %></span>
            <svg class="user-avatar-chevron" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
          </button>
          <div class="user-dropdown-menu" id="userDropdownMenu">
            <div class="user-dropdown-modal">
              <nav class="user-dropdown-nav">
                <a data-nav href="/checkin" class="user-dropdown-link">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="9" y1="9" x2="15" y2="15"></line>
                    <line x1="15" y1="9" x2="9" y2="15"></line>
                  </svg>
                  <span>Check In</span>
                </a>
                <a data-nav href="/owner/dashboard" class="user-dropdown-link">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                    <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
                  </svg>
                  <span>Workplaces</span>
                </a>
              </nav>
              <div class="user-dropdown-divider"></div>
              <nav class="user-dropdown-nav">
                <a data-nav href="/owner/profile" class="user-dropdown-link">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                  </svg>
                  <span>Profile</span>
                </a>
                <a data-nav href="/owner/settings" class="user-dropdown-link">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="3"></circle>
                    <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                  </svg>
                  <span>Settings</span>
                </a>
              </nav>
              <div class="user-dropdown-divider"></div>
              <button type="button" class="user-dropdown-link user-dropdown-signout" id="signoutBtn">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                  <polyline points="16 17 21 12 16 7"></polyline>
                  <line x1="21" y1="12" x2="9" y2="12"></line>
                </svg>
                <span>Sign out</span>
              </button>
            </div>
          </div>
        </div>
      <% } else { %>
        <a class="btn" href="/register">Sign Up</a>
        <a class="btn primary" href="/users/signin">Sign In</a>
      <% } %>
    </nav>
  </div>
</header>


<body class="bg-grid">
  <% if (typeof useWrap !== 'undefined' && useWrap) { %>
    <div class="wrap">
      <%- body %>
    </div>
  <% } else { %>
    <%- body %>
  <% } %>
</body>

<footer class="footer">
  <div class="container">
    <div class="small">© <span id="year"></span> Thleng Ta!. Built in Mizoram.</div>
    <div class="small" style="margin-top:8px">
      <a href="#about">About</a> · <a href="#pricing">Pricing</a> · <a href="#contact">Contact</a>
    </div>
  </div>
</footer>

<% if (isLoggedIn) { %>
<!-- Sign Out Confirmation Modal -->
<div id="signoutModal" class="modal-overlay" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.5); z-index:2000; align-items:center; justify-content:center;">
  <div class="modal-card" style="background:#fff; max-width:400px; width:90%; margin:20px; border:2px solid #1b1b1b; border-radius:12px; box-shadow:4px 4px 0 rgba(0,0,0,0.2); overflow:hidden;">
    <div class="modal-header" style="padding:20px; border-bottom:1px dashed rgba(0,0,0,0.2);">
      <div style="font-size:12px; font-weight:700; text-transform:uppercase; letter-spacing:0.5px; color:#6b7280; margin-bottom:8px;">Sign Out</div>
      <h3 style="margin:0; color:#1b1b1b;">Are you sure?</h3>
      <div class="small" style="margin-top:6px; color:#6b7280;">You will be signed out of your account</div>
    </div>
    <div class="modal-body" style="padding:20px;">
      <form method="post" action="/users/signout" id="signoutForm">
        <button type="submit" class="btn primary full" style="width:100%; background:#d32f2f; color:#1b1b1b; border:2px solid #1b1b1b; box-shadow:2px 2px 0 #1b1b1b; font-weight:700;">Yes, Sign Out</button>
      </form>
      <button type="button" class="btn full" id="cancelSignoutBtn" style="width:100%; margin-top:12px; background:#eaf6f0; border:2px solid #1b1b1b; box-shadow:2px 2px 0 #1b1b1b; font-weight:700;">Cancel</button>
    </div>
  </div>
</div>
<% } %>

  <script src="/client/utils/user-dropdown.js" defer></script>
</html>
