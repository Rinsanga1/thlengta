<section class="section" style="padding-top:46px;">
  <div class="card pad" style="max-width:520px;margin:0 auto;">
    <div class="topbar" style="margin-bottom:14px;">
      <div>
        <div class="h-eyebrow">
          <span class="chip">Superadmin</span>
          <span class="chip">Back Office</span>
        </div>
        <h2 style="margin:10px 0 0;">THLENG TA Control Panel</h2>
        <div class="small" style="margin-top:6px;">
          Restricted access. Superadmin only.
        </div>
      </div>
    </div>

    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <form method="post" action="/superadmin/login" class="form" style="margin-top:12px;">
      <div class="field">
        <label>Email</label>
        <input
          type="email"
          name="email"
          required
          placeholder="superadmin@thlengta.com"
        />
      </div>

      <div class="field">
        <label>Password</label>
        <input
          type="password"
          name="password"
          required
          placeholder="••••••••"
        />
      </div>

      <button class="btn primary full" type="submit">
        Login to Back Office
      </button>
    </form>

    <div class="notice" style="margin-top:14px;">
      <div style="font-weight:900;">Not a superadmin?</div>
      <div class="small" style="margin-top:6px;">
        Use the regular admin login instead.
      </div>
      <div style="margin-top:8px;">
        <a class="btn" href="/owner/login">Go to Admin Login</a>
      </div>
    </div>
  </div>
</section>
