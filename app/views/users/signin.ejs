<section class="section" style="padding-top:46px;">
  <div class="card pad" style="max-width:520px;margin:0 auto;">
    <div class="topbar" style="margin-bottom:14px;">
      <div>
        <div class="h-eyebrow">
          <span class="chip">Welcome Back</span>
        </div>
        <h2 style="margin:10px 0 0;">Sign In</h2>
        <div class="small" style="margin-top:6px;">Sign in to your account</div>
      </div>
    </div>

    <% if (registered) { %>
      <div class="notice" style="margin-bottom: 1rem;">
        Account created successfully! Please sign in.
      </div>
    <% } %>

    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <form class="form" method="post" action="/users/signin" style="margin-top:12px;">
      <% if (redirect) { %>
        <input type="hidden" name="redirect" value="<%= redirect %>">
      <% } %>
      
      <div class="field">
        <label>Email</label>
        <input type="email" name="email" required placeholder="you@example.com" autocomplete="email">
      </div>

      <div class="field">
        <label>Password</label>
        <input type="password" name="password" required placeholder="Your password" autocomplete="current-password">
      </div>

      <div class="field" style="display:flex;align-items:center;gap:10px;margin-top:8px;">
        <input id="remember_me" type="checkbox" name="remember_me" style="width:18px;height:18px;" />
        <label for="remember_me" style="margin:0;">Remember me</label>
      </div>

      <button class="btn primary full" type="submit" style="margin-top: 1rem;">Sign In</button>
    </form>

    <div class="notice" style="margin-top:16px;">
      <div class="small">
        Don't have an account? <a href="/register">Sign Up</a>
      </div>
    </div>
  </div>
</section>
