<header class="nav">
  <div class="container nav-inner">
    <a class="brand" href="/#home">
      <span>
        <img src="/assets/img/thlengtalogo.png" alt="Thlengta logo" width="80px"/>
      </span>
      <span class="small">
        <img src="/assets/img/thlengtalogotext.png" atl="Thlengta logo type" width="195px"/>
      </span>
      <span class="small">
        <img src="/assets/img/com.png" atl="Thlengta logo type" width="75px" style="margin-left: -10px"/>
      </span>
    </a>
  </div>
</header>

<section class="section" style="padding-top:46px;">
  <div class="card pad" style="max-width:720px;margin:0 auto;">
    <div class="topbar" style="margin-bottom:14px;">
      <div>
        <div class="h-eyebrow">
          <span class="chip">Create Your Account</span>
        </div>
        <h2 style="margin:10px 0 0;">Simplify your attendance tracking with Thlengta</h2>
        <div class="small" style="margin-top:6px;">Fill in your details to get started</div>
      </div>
    </div>

    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <div class="alert info" style="margin-bottom: 1.5rem;">
      <span>â„¹</span>
      <div class="alert-content">
        <div class="alert-title">Approval Flow</div>
        <div class="alert-message">After registration, your account will be pending approval. Once approved, you can login and start creating stores and employees.</div>
      </div>
      <div style="display: flex; align-items: center; gap: 0.5rem;">
        <span>Selected plan:</span>
        <span class="status-badge approved"><%= (plan || "standard").toUpperCase() %></span>
      </div>
    </div>

    <form class="form" method="post" action="/register" style="margin-top:12px;">
      <input type="hidden" name="plan" value="<%= plan || 'standard' %>">

      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;">
        <div>
          <h3 class="form-section-title">Personal Information</h3>
          
          <div class="field">
            <label>Full Name</label>
            <input type="text" name="name" required placeholder="Your full name" autocomplete="name">
          </div>

          <div class="field">
            <label>Phone Number</label>
            <input type="tel" name="phone" required placeholder="Phone number" autocomplete="tel">
          </div>

          <div class="field">
            <label>Business Address</label>
            <input type="text" name="address" required placeholder="Business / store address" autocomplete="street-address">
            <p class="form-help">Use your main business contact details. This helps faster approval.</p>
          </div>
        </div>

        <div>
          <h3 class="form-section-title">Account Information</h3>

          <div class="field">
            <label>Email Address</label>
            <input type="email" name="email" required placeholder="you@example.com" autocomplete="email">
          </div>

          <div class="field">
            <label>Password</label>
            <input type="password" name="password" minlength="8" required placeholder="Minimum 8 characters" autocomplete="new-password">
            <p class="form-help">Use a strong, unique password (minimum 8 characters).</p>
          </div>
        </div>
      </div>

      <button class="btn primary full" type="submit" style="margin-top: 1.5rem;">Submit for Approval</button>

      <p class="form-help text-center" style="margin-top: 1rem;">
        By submitting, you agree to be contacted for verification if needed.
      </p>
    </form>
  </div>
</section>
